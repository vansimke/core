{
	"version": "1.7.0",
	"compilerOptions": {
		"declaration": false,
		"module": "umd",
		"noImplicitAny": true,
		"outDir": "_build/",
		"removeComments": false,
		"target": "es5",
		"experimentalDecorators": true,
		"sourceMap": true,
		"moduleResolution": "classic"
	},
	"filesGlob": [
		"./src/**/*.ts",
		"./tests/**/*.ts",
		"./typings/tsd.d.ts"
	],
	"exclude": [
		"node_modules",
		"_build",
		"_build_orig",
		"dist_orig",
		"dist",
		"docs",
		"resources",
		"typings/node",
		"typings/symbol-shim"
	]
}
